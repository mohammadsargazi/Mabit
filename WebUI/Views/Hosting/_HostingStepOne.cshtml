@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<style>
    .container-role-singleunit {
        display: block;
    }

    .container-role-hotel {
        display: none;
    }
    .hotel-txt{
        display:none;
    }
</style>
<div class="items">
    <div class="item">
        <h5 class="unit-txt" localize-content>Add New Unit</h5>
        <h5 class="hotel-txt" localize-content>Add New Hotel</h5>
        <p>
            You intend to register a hotel or house?
        </p>
        <div class="cat">
            <div class="radio-wrapper">
                <input type="radio"
                       class="radios"
                       id="singleUnit"
                       name="categoryType" checked />
                <label style="cursor:pointer" for="singleUnit" localize-content>
                    <span class="outer">
                        <span class="inner animated"></span>
                    </span>
                    Single Unit
                </label>
            </div>
            <div class="radio-wrapper ml-5">
                <input type="radio"
                       class="radios"
                       id="hotelOrMotel"
                       name="categoryType" />
                <label style="cursor:pointer" for="hotelOrMotel" localize-content>
                    <span class="outer">
                        <span class="inner animated"></span>
                    </span>
                    Hotel or Motel
                </label>
            </div>
        </div>
    </div>
    <div class="item mb-1">

        <div class="scrollbar" id="scrollbar-custom">
            <div class="container-role-singleunit">
                <h5 localize-content>Single Unit Rules</h5>
                <partial name="_UnitHostingRole" />
            </div>
            <div class="container-role-hotel">
                <h5 localize-content>Hotel Rules</h5>
                <partial name="_HotelHostingRole" />
            </div>
        </div>
        <div class="cat">
            <div class="radio-wrapper">
                <input type="radio"
                       class="radios"
                       id="agreeRd"
                       name="agree" />
                <label for="agreeRd" localize-content>
                    <span class="outer">
                        <span class="inner animated"></span>
                    </span>
                    Agree
                </label>
            </div>
        </div>
    </div>

</div>
<div class="btn-container p-1">
    <button type="button" disabled id="nextBtnStepOne"
            class="btn-step res-btn-orange mb-2 btn" style="border-color:white;"
            data-class=".res-form-one" localize-content>
        Next
    </button>
</div>

<script>
    $("#agreeRd").change(function () {
        if ($(this).prop("checked")) {
            $("#nextBtnStepOne").prop("disabled", false);
            $("#nextBtnStepOne").css("border-color", "#4567F4");
        } else {
            $("#nextBtnStepOne").prop("disabled", true);
            $("#nextBtnStepOne").css("border-color", "white");
        }
    });
    $("#singleUnit").click(function () {
        $(".container-role-singleunit").css("display", "block");
        $(".container-role-hotel").css("display", "none");
        $(".unit-txt").css("display", "block");
        $(".hotel-txt").css("display", "none");
        $(".res-steps").css("width", "92.5px");
    });
    $("#hotelOrMotel").click(function () {
        $(".container-role-singleunit").css("display", "none");
        $(".container-role-hotel").css("display", "block");
        $(".unit-txt").css("display", "none");
        $(".hotel-txt").css("display", "block");
        $(".res-steps").css("width", "83.5px");
    });
</script>