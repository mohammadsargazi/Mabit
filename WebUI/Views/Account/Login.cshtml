@{
    ViewData["Title"] = "Log in";
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}


@*customs style ( Farshid )*@
<style>
    .custom-mg-top {
        margin-top: 290px;
    }

    .input-new-style {
        background-color: rgba(201, 201, 201, 0.301);
        border: 10px;
    }

    .alert-danger {
        display: none;
    }
</style>
@* / customs style ( Farshid )*@
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-10 col-xl-10 mt-5">
            <div class="card shadow-lg o-hidden border-0 my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="alert alert-danger">

                            </div>
                            <div class="p-5">
                                <div class="row">
                                    <div class="col col-md-6 text-center"><button class="btn btn-lg font-weight-bold">Login</button></div>
                                    <div class="col col-md-6 text-center"><button class="btn btn-lg font-weight-bold">SignUp</button></div>
                                </div>
                                <hr>
                                <form class="user">
                                    <div class="row mt-4">
                                        <div class="form-group col-md-6">
                                            <input class="form-control input-new-style" type="text" id="newUserName" placeholder="User Name">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input class="form-control input-new-style" type="password" id="newPassword" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <div class="form-check"><input class="form-check-input custom-control-input" type="checkbox" id="formCheck-1"><label class="form-check-label custom-control-label pt-2 pr-4" for="formCheck-1">Remember Me</label></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row d-flex justify-content-md-start justify-content-center custom-mg-top">
                                        <div class="col-10 col-md-6 col-lg-3">
                                            <button class="btn btn-primary text-white mt-1 w-100" id="newBtnLogin">Login</button>
                                        </div>
                                        <div class="col-10 col-md-6 col-lg-6">
                                            <button class="btn btn-outline-primary mt-1 w-100">Forgot Password</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 d-none d-lg-flex">
                            <div class="flex-grow-1 bg-login-image">
                                <img src="~/img/2mabit.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>


    $("#newBtnLogin").click(function () {
            $.ajax({
                url: '@Url.Action("Login", "Account")',
                type: 'POST',
                data: {
                    userName: $("#newUserName").val(),
                    password: $("#newPassword").val(),
                },
                beforeSend: function () {

                },
                success: function (e) {
                    debugger;
                    if (e) {
                        location.reload();
                    }
                    else {
                        $(".container-error-message").css("display", "block");
                    }

                },
                error: function (request, error) {

                },
                complete: function () {
                    //loadingBoxStop();
                }
            });
        });
</script>
