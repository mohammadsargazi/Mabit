    @@media screen and (min-width:776px){
        .cancel-box {
            text-align: center;
            margin-top: 30px;
        }
        .cancel-text{
            margin-top:8px;
        }
    }
    @@media screen and (max-width:776px) {
        .cancel-box {
            text-align: center;
            margin-top: 10px;
        }
        .cancel-text {
