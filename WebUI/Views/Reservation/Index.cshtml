@model List<Mabit.Models.Model.BookModel.MyBookModel>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@foreach (var item in Model)
{
    <div class="row pt-3 pb-4 brd-b-1">
        <div class="col-12 col-lg-4">
            <div class="row mx-0">
                <div class="col-12 col-lg-12 col-sm-12 px-0">
                    @*<img src="@(item.pictureUrl)"
                        class="img-fluid brd-r-15">*@
                    @if (item.pictureUrl == null)
                    {
                        <img src="~/img/layer_886.jpg" class="img-fluid brd-r-15" />
                    }
                    else
                    {
                        <img src="@(item.pictureUrl)" class="img-fluid brd-r-15">
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8 col-lg-5 pt-3">
            <!-- price adn rating -->
            <div class="d-flex text-left">
                <h5 class="font-weight-bolder mabit-darkGray mb-1">@(item.title)</h5>
                <span class="px-2">
                    <i class="fa fa-star mabit-middle-gray"></i>
                    <span class="mabit-light-gray">4.8</span>
                    <span class="mabit-light-gray">/</span>
                    <span class="mabit-light-gray">5</span>
                </span>
            </div>
            <div class="d-flex text-left ">
                <span>@(item.country?.title)</span><span class="px-1">,</span><span>@(item.province?.title)</span>
                <span class="px-1">(Ads id :</span><span class="px-1">132159</span><span>)</span>
            </div>
            <div class="mt-1">
                <a href="#" class="mabit-blue">Chat With Host</a>
            </div>
            <!-- /price adn rating -->
            <div class="row">
                @if (item.bookStatusId == 1)
                {
                    <partial name="_Request" />
                }
                @if (item.bookStatusId == 2)
                {
                    <partial name="_Prepayment" />
                }
                @if (item.bookStatusId == 3)
                {
                    <partial name="_Done" />
                }
                @if (item.bookStatusId == 4)
                {
                    <partial name="_Cancelled" />
                }
            </div>
        </div>
        <!-- border line in Small Devic -->
        <div class="col-10 d-md-none mx-auto my-1" style="height: 1px;border-top: .1rem solid gray;opacity: .3;"></div>
        <!-- /border line in Small Devic -->
        <div class="col-12 col-md-4 col-lg-3 pt-3">
            <div class="row">
                <div class="col-8 col-md-12">
                    <!-- in adn out and -->
                    <div class="text-left">
                        <span class="f-size-14 mabit-darkGray">In</span>
                        <span class="font-weight-bold mabit-darkGray float-right">@(item.fromDate)</span>
                    </div>
                    <div class="text-left">
                        <span class="f-size-14 mabit-darkGray">Out</span>
                        <span class="font-weight-bold mabit-darkGray float-right">@(item.toDate)</span>
                    </div>
                    <div class="text-left">
                        <span class="f-size-14 mabit-darkGray">Cost</span>
                        <span class="font-weight-bold mabit-blue float-right">@(item.cost) $</span>
                    </div>
                    <!-- /in adn out and -->
                </div>
                <div class="col-4 col-md-12">
                    <!-- cancel -->
                    <div class="cancel-box">
                        <a asp-controller="Reservation" asp-action="CancelBook" asp-route-id="@item.bookId" class="btn btn-cancel mr-3" localize-content>Cancel</a>
                        <div class="cancel-text"><a href="#" class="mabit-blue" localize-content>Similar Houses</a></div>
                    </div>
                    <!-- cancel -->
                </div>
            </div>
        </div>
    </div>
}


@*farshid style*@
