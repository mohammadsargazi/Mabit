<script type="text/javascript">
    var pageIndex = 1;
    $(function () {
        window.pagObj = $('#pagination').twbsPagination({
            totalPages: @(TotalPages),
            visiblePages: 5,
            onPageClick: function (event, page) {
                console.info(page + ' (from options)');
                //pagingRooms(page);
            }
        }).on('page', function (event, page) {
            console.info(page + ' (from event listening)');
            searchRooms(page);
        });
    });
    $(".page-link").click(function () {
        var page = $(this).text();
        pagingRooms(page);
    });
    function pagingRooms(page) {
        loadingBoxStart();
        var wherTo = $("#page-search-where").val();
        var from = $('input[name="dates"]').val().split('-')[0];
        var to = $('input[name="dates"]').val().split('-')[1];
        page = page;
        window.location.href = '/' + "@(culture)" + '/Room/Search?wherTo=' + wherTo + "&from=" + from + "&to=" + to + "&page=" + page;
    }
    function searchRooms(page) {
        pageIndex = page;
        var isPriceRangeChecked = false;
        if ($(".price-filter-btn").css("background-color") == "rgb(69, 103, 244)")
            isPriceRangeChecked = true;
        var countyId = $(".country-inp:checked").val();
        var provinceId=$(".city-inp:checked").attr('id');
        var peopleCount=$(".spn-count-people").text();
        var roomCount=$(".spn-count-room").text();
        var bedRoomCount=$(".spn-count-bedroom").text();
        var fromPrice= $(".min-price").val();
        var toPrice=$(".max-price").val();
        debugger;
         $.ajax({
            url: '@Url.Action("SearchRooms", "Room")',
             type: 'Post',
             beforeSend: function () {
                 loadingBoxStart();
             },
             data: {
                 peopleCount: peopleCount,
                 fromPrice: fromPrice,
                 toPrice: toPrice,
                 countryId: countyId,
                 provinceId:provinceId,
                 checkinDate: $('input[name="dates"]').val().split('-')[0],
                 checkoutDate: $('input[name="dates"]').val().split('-')[1],
                 isReady: $("#isReady").is(":checked"),
                 isPriceRangeChecked: isPriceRangeChecked,
                 page: page,
                 bedCount: bedRoomCount,
                 roomCount: roomCount
            },
             success: function (html) {
                 $('.container-body').html(html);

             },
             complete: function () {
                 loadingBoxStop();
             },
        });
    }
</script>

