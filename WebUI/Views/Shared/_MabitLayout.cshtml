@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var wehreTo = culture == "fa" ? "کجا میروید ؟" : (culture == "ar" ? "إلى أين ؟" : "where to ?");
    var fontClass = "mabit-font-en";
}
@if (culture == "fa")
{
    fontClass = "mabit-font-fa";
}
@if (culture == "ar")
{
    fontClass = "mabit-font-ar";
}
<body style="font-family: '@fontClass';">
    <div id="page-header">
        <div id="page-logo">
            <a asp-controller="Home" asp-action="Index" asp-route-culture="@culture">
                <img src="~/img/page_logo.png">
            </a>
        </div>

        <div id="page-search">
            <input type="text" id="page-search-where" placeholder="@wehreTo">
            <div id="page-search-date">
                <input placeholder="Check in" type="text" name="dates" style="border: none;background-color: #f4f4f4;height: 20px;">
                <script>
                    $(function () {
                        $('input[name="dates"]').daterangepicker({});
                        $('input[name="dates"]').val("Check In-Check Out");
                    })

                </script>
            </div>
            <a href="#">
                <div id="page-search-btn">Search</div>
            </a>
        </div>
        <div class="page-menu-link">
            <language-nav language-label="NativeName"></language-nav>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <partial name="_UserLogin" />
        }
        else
        {
            <div class="page-menu-link">
                <img src="~/img/ph_signin.png">
                <span data-toggle="modal" data-target="#loginMobileNumberModal" style="cursor:pointer;" localize-content> login / Register</span>
                @*<a asp-area="" asp-controller="Account" asp-action="Login" asp-route-culture="@culture" localize-content>
                        login / Register
                    </a>*@
            </div>
        }
        @if (User.Identity.IsAuthenticated)
        {
            <div class="page-menu-link">
                <img src="~/img/ph_host.png">
                <a asp-controller="Hosting" asp-action="List" asp-route-culture="@culture" localize-content>Hosting</a>
            </div>

            <div class="page-menu-link">
                <img src="~/img/ph_support.png">
                <a asp-controller="Reservation" asp-action="Index" asp-route-culture="@culture" localize-content>Reservation</a>
            </div>
        }


        <div class="page-menu-link">
            <img src="~/img/ph_app.png">
            <a asp-controller="Account" asp-action="Login" asp-route-culture="@culture" localize-content>App download</a>
        </div>

    </div>

    <div class="container-fluid pt-60">
        <main role="main" class="pb-3 someBlock">
            @RenderBody()
        </main>
    </div>

    <partial name="_footer" />

    <!----------login userName and password Modal---------->
    <!-------login mobile number Modal-------->
    <div class="modal fade" id="loginMobileNumberModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body modal-body-web-custom pr-0 pl-0 pt-0 pb-0">
                    <div class="oval-header3">
                        <button type="button" class="close close-web-custom" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <div class="pt-4" style="text-align:center;">
                            <img src="~/img/tell.png" width="145" class="ml-3">
                        </div>
                        <span class="text-white" style="padding-left: 120px;">لطفا برای ورود نام کاربری و پسورد خود را وارد کنید</span>
                        <div class="oval-header--mask3">
                        </div>
                    </div>
                </div>
                <div class="content2 pb-40" style="text-align:center;">
                    @*<form id="telInput" class="ltr">
                            <input id="phone" name="phone" type="tel" class="text-left brd-1-blue border-top-0 border-right-0 border-left-0">
                        </form>
                        <div class="row mt-3">
                            <div class="col-3"></div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control" tabindex="-1">ارسال کد</button>
                            </div>
                            <div class="col-3"></div>
                        </div>*@
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-xs-12 mb-3">
                            <label localize-content>UserName :</label>
                            <input type="text" class="text-left brd-1-blue border-top-0 border-right-0 border-left-0" id="userName" data-localize="UserName" placeholder="UserName" />
                        </div>
                        <div class="col-lg-12 col-sm-12 col-xs-12 mb-3">
                            <label localize-content>Password :</label>
                            <input type="text" class="text-left brd-1-blue border-top-0 border-right-0 border-left-0" id="password" placeholder="password" />
                        </div>
                    </div>
                    <div class="row" style="margin:7px 0;">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button id="btnLogin" class="btn btn-primary text-white pointer " localize-content>
                                Login
                            </button>
                            <a asp-controller="Account" asp-action="Register" localize-content>Register</a>
                        </div>
                        <div class="col-3"></div>
                    </div>
                    <div class="row mt-3 container-error-message" style="display:none;text-align:center;font-size:20px;">
                        <label localize-content>Incorrect username or password</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!---------virify Modal------->
    <div class="modal fade" id="activityCodeModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body modal-body-web-custom pr-0 pl-0 pt-0 pb-0">
                    <div class="oval-header">
                        <button type="button" class="close close-web-custom" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <div>
                            @*<img class="brd-r-50 modal-top-logo" src="../Content/img/undraw_mail_2_tqip.png">*@
                        </div>
                        <span class="text-white">لطفا کد تاییدی که به شماره</span>
                        <div class="text-white"> 09101001010 ارسال شده است را وارد نمایید</div>
                        <div class="oval-header--mask">
                        </div>
                    </div>

                </div>
                <div class="content">
                    <div class="row mr-5 ml-5 text-center ltr">
                        <div class="col-12 d-flex justify-content-center">
                            <input class="form-control text-center inputs ml-3" type="text" maxLength="1">
                            <input class="form-control text-center inputs ml-3" type="text" maxLength="1">
                            <input class="form-control text-center inputs ml-3" type="text" maxLength="1">
