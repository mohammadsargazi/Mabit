                            </a>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button type="button" class="btn btn-primary form-control" tabindex="-1">ارسال کد</button>
                        </div>
                        <div class="col-3"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>

        $("#phone").intlTelInput({});
        $("#btnLogin").click(function () {
            $.ajax({
                url: '@Url.Action("Login", "Account")',
                type: 'POST',
                data: {
                    userName: $("#userName").val(),
                    password: $("#password").val(),
                },
                beforeSend: function () {

                },
                success: function (e) {
                    debugger;
                    if (e) {
                        location.reload();
                    }
                    else {
                        $(".container-error-message").css("display", "block");
                    }

                },
                error: function (request, error) {

                },
                complete: function () {
                    //loadingBoxStop();
                }
            });
        });
        $("#btnRegister").click(function () {
            $.ajax({
                url: '@Url.Action("Register", "Account")',
                type: 'POST',
                data: {
                    FirstName: $("#FirstName").val(),
                    LastName: $("#LastName").val(),
                    Mobile: $("#Mobile").val(),
                    UserName: $("#UserName").val(),
                    Password: $("#Password").val(),
                },
                beforeSend: function () {

                },
                success: function (e) {
                    debugger;


                },
                error: function (request, error) {

                },
                complete: function () {
                    //loadingBoxStop();
                }
            });
        });
        $("#page-search-btn").click(function () {
            var wherTo = $("#page-search-where").val();
            var from = $('input[name="dates"]').val().split('-')[0];
            var to = $('input[name="dates"]').val().split('-')[1];
            window.location.href ='/'+"@(culture)"+'/Room/Search?wherTo=' + wherTo + "&from=" + from + "&to=" + to;
        })
    </script>
    <script>
        var obj = {},
            someBlock = $('.someBlock');
        function loadingBoxStart() {
            someBlock.preloader({
                text: obj.textVal,
                percent: obj.percentVal,
                duration: obj.durationVal
            });
            //$('.form-control').each(function (k, v) {
            //    if (v.value.length == 0) $(v).attr('disabled', true);
            //});
        }
        function loadingBoxStop() {
            someBlock.preloader('remove');
            //$('.form-control').attr('disabled', false);
        }
    </script>
